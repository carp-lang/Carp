(system-include "carp_float.h")

(defmodule Float
  (Numeric.register Float)
  (Floating.register Float)

  (doc zero "returns `0.0f`.")
  (defn zero []
    0.0f)
)

(defmodule FloatRef
  (defn = [a b]
    (Float.= @a @b))

  (defn < [a b]
    (Float.< @a @b))

  (defn > [a b]
    (Float.> @a @b))

  (defn + [a b]
    (Float.+ @a @b))
)
