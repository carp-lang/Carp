;; Example 4, capturing of correct variables
(def global-variable 10000)

(defn cap [capture-me]
  (let [and-me 1000]
    (fn [not-me]
      (let [nor-me 100]
        (+ (+ (+ (+ global-variable capture-me) and-me) not-me) nor-me)))))

(defn example-4 []
  (let [f (cap 10)]
    (println* (f 1))))

