(load "Test.carp")

(use-all Random Test)

(deftest test
  (assert-op test
             0.658908
             (Random.random)
             "deterministic randomization works as expected"
             Generics.approx)
  (assert-op test
             0.536041
             (do (Random.seed-from 33333.0) (Random.random))
             "deterministic randomization with seed works as expected"
             Generics.approx))
